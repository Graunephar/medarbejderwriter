<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lol.graunephar.android.medarbejderwriter.WriterActivity">

    <Button
        android:id="@+id/writer_write_btn"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        android:text="Button"
        android:background="@color/buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writer_points_num" />

    <TextView
        android:id="@+id/writer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Lorem ipsum dolor sit amet"
        app:layout_constraintBottom_toTopOf="@+id/writer_name_txt"
        app:layout_constraintStart_toStartOf="@+id/writer_name_txt" />

    <EditText
        android:id="@+id/writer_name_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/writer_fun_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Et navn" />

    <EditText
        android:id="@+id/writer_fun_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:contentDescription="Sjov fakta"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/writer_points_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writer_name_txt" />

    <TextView
        android:id="@+id/writer_fun_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Fun fact"
        app:layout_constraintBottom_toTopOf="@+id/writer_fun_txt"
        app:layout_constraintStart_toStartOf="@+id/writer_fun_txt" />

    <TextView
        android:id="@+id/writer_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Point"
        app:layout_constraintBottom_toTopOf="@+id/writer_points_num"
        app:layout_constraintStart_toStartOf="@+id/writer_points_num" />

    <EditText
        android:id="@+id/writer_points_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/writer_write_btn"
        app:layout_constraintStart_toStartOf="@+id/writer_write_btn"
        app:layout_constraintTop_toBottomOf="@+id/writer_fun_txt" />

</android.support.constraint.ConstraintLayout>
